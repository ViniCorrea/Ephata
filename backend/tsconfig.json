{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@entities/*": ["src/database/entities/*"],
      "@modules/*": ["src/modules/*"],
      "@providers/*": ["src/modules/*"],
      "@globals": ["src/types/globals.ts"],
      "types/*": ["src/types/*"],
      "@dto/*": ["src/dto/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@errors/*": ["src/errors/*"]
    }
  },
  "exclude": ["migrations/*.ts"]
}
